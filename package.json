{
  "name": "api-switchboard",
  "version": "1.0.0",
  "description": "Universal API Switchboard - Parse cURL, fetch data, route to n8n or Google Sheets",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-store": "^8.2.0",
    "google-auth-library": "^9.14.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.switchboard.api",
    "productName": "API Switchboard",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/main/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
